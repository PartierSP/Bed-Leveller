Public Sub tmrGetTemp_Timer()

  tmrGetTemp.Enabled = False

  'Delay getting temperature if busy
  While bBusy = True
    Wait
  Wend

  ComBusy

  SendSerialData(sGetTemperatures, True)
  SendSerialData("M114", True)
  tmrGetTemp.Enabled = True

  ComFree

End

